<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@drawable/shap_item_cellcolor_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/people_image"
            android:layout_marginLeft="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/sno"
                    style="@style/commonCellTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="学号:10000"
                    android:textColor="@color/white"
                    android:textSize="23dp"
                    android:background="@color/locationColor"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:textSize="23dp"
                style="@style/commonCellTextStyle"
                android:layout_weight="1"
                android:text="姓名：张三"
                />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/data_1"
                    android:layout_width="wrap_content"
                    android:textSize="23dp"
                    android:textColor="@color/coreGrayDark"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="姓名：张三"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/data_2"
                    android:layout_width="0dp"
                    android:textSize="23dp"
                    style="@style/commonCellTextStyle"
                    android:layout_weight="1"
                    android:text="姓名：张三"
                    />
            </LinearLayout>
        </LinearLayout>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >
    </LinearLayout>
</LinearLayout>